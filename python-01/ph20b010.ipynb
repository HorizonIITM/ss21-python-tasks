import numpy as np
def lagrange_polynomial(datalist, xvalue):
    n=len(datalist) #number of data point in data list len(datalist)
    xlist=datalist[:,0]
    ylist=datalist[:,1]
    y=0
    for i in  range(n):
        p=1                       
        for j in range(n):
            if i !=j:
                p = p*(xvalue - xlist[j])/(xlist[i] - xlist[j])
                                        
        y=y+p*ylist[i]
    print(y)


